{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals",
  "main": "server.js",
  "scripts": {
    "build": "npm run clean && babel app -d ./app/dist",
    "dev": "nodemon ./app/server.js --exec babel-node",
    "clean": "rm -rf ./app/dist",
    "lint": "eslint ./app --fix",
    "createtables": "babel-node ./app/db/migrate.js",
    "droptables": "babel-node ./app/db/migrateReset.js",
    "seed": "babel-node ./app/db/seed.js",
    "before:start": "npm run droptables && npm run createtables && npm run seed",
    "start": "npm run build && node ./app/dist/server.js ",
    "before:test": "babel-node ./app/db/migrateReset.js && babel-node ./app/db/migrate.js && babel-node ./app/test/seed.js",
    "test": "npm run before:test && mocha --require @babel/register --require babel-polyfill ./app/test/unitTests/**.js  --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chokonaira/Banka.git"
  },
  "author": "Henry Okonkwo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chokonaira/Banka/issues"
  },
  "homepage": "https://github.com/chokonaira/Banka#readme",
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.4.3",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "core-js": "^3.0.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "morgan": "^1.9.1",
    "password-hash": "^1.2.2",
    "pg": "^7.10.0",
    "shortid": "^2.2.14",
    "swagger-ui-express": "^4.0.2"
  }
}
