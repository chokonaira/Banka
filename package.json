{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals",
  "main": "server.js",
  "scripts": {
    "build": "babel app --out-dir ./dist --source-maps",
    "clean": "rm -rf dist",
    "dev": "nodemon ./app/server.js --exec babel-node",
    "lint": "./node_modules/.bin/eslint ./app --fix",
    "start": "npm run build && node ./dist/server.js ",
    "test": "mocha --compilers js:@babel/register app/test/*.js --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chokonaira/Banka.git"
  },
  "author": "Chuka Okonkwo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chokonaira/Banka/issues"
  },
  "homepage": "https://github.com/chokonaira/Banka#readme",
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "core-js": "^3.0.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "morgan": "^1.9.1",
    "password-hash": "^1.2.2",
    "shortid": "^2.2.14"
  }
}
